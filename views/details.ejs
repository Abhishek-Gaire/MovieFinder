<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/boxicons/2.1.0/css/boxicons.min.css"
      integrity="sha512-pVCM5+SN2+qwj36KonHToF2p1oIvoU3bsqxphdOIWMYmgr4ZqD3t5DjKvvetKhXGc/ZG5REYTT6ltKfExEei/Q=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/details.css" />
    <script src="/js/details.js" defer></script>
    <title>MoviesT</title>
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
  </head>

  <body>
    <header>
      <div class="nav-container">
        <span id="logo"
          ><a href="/"><img src="/logo.png" alt="" /></a
        ></span>
        <nav>
          <form action="/search" method="post">
            <input
              type="text"
              name="searchQuery"
              placeholder="Search..."
              id="searchBar"
            />
            <button type="submit" id="searchBtn">
              <i class="bx bx-search"></i>
            </button>
          </form>
        </nav>
      </div>
    </header>

    <main>
      <div class="background-img">
        <img src="<%=imgSrc%>" alt="" id="background" />
      </div>
      <div class="detail-container">
        <figure>
          <img
            src="https://image.tmdb.org/t/p/original/<%=detailMovie.poster_path%>"
            alt=""
            id="poster"
          />
        </figure>
        <div class="info">
          <h1 id="title"><%= name1 %></h1>
          <p id="rating">
            ⭐
            <span id="ratingVal"><%= averageVote %></span>
            <span id="ratingQty"><%=detailMovie.vote_count%></span>
          </p>
          <section class="type-genre">
            <!-- style="<% if(type === 'movie') {%>
                grid-template-columns: 73px 1fr;
            <% } %> " -->
            <div id="type" class="type">
              <% if(type === "tv") {%> TV series <%} else { %> Movie <%} %>
            </div>
            <div id="genre">
              <% detailMovie.genres.forEach((g) => { %>
              <a id="<%=g.id%>"><%=g.name%></a>
              <% }) %>
            </div>
          </section>
          <div class="overview-container">
            <h2>Overview</h2>
            <p id="overview" class="active"><%=overview%></p>
            <p>
              <button id="readMore" onclick="toggleOverview(this)">
                Read More
              </button>
            </p>
          </div>

          <section class="extra-details">
            <table id="detailTable">
              <tr>
                <th>Creator</th>
                <td id="creator"><%=creator%></td>
              </tr>
              <tr>
                <th>Stars</th>
                <td id="stars">
                  <% castArr.forEach(cast => {%>
                  <span class="cast-name"><%=cast %></span>
                  <%})%>
                </td>
              </tr>

              <tr id="relContainer">
                <th>Release Date</th>
                <td id="releaseDate"><%= date %></td>
              </tr>
              <% if(type === "tv") { %>
              <tr>
                <th>Seasons</th>
                <td><%=detailMovie.number_of_seasons%></td>
              </tr>
              <tr>
                <th>Episodes</th>
                <td><%= detailMovie.number_of_episodes %></td>
              </tr>
              <%}%>
            </table>
          </section>
        </div>
      </div>
      <section id="recommendedSection">
        <h2>Recommended</h2>
        <div class="movies-container" id="recommendations">
          <button class="btn-cont left" onmousedown="scrollCard(this)">
            <i class="bx bx-chevron-left"></i>
          </button>
          <button class="btn-cont right" onmousedown="scrollCard(this)">
            <i class="bx bx-chevron-right"></i>
          </button>

          <% recommendationsData.forEach((movie) => { %>
          <div class="card">
            <a href="/movie/<%=movie.id%>?type=<%=type%>">
              <figure>
                <img
                  src="https://image.tmdb.org/t/p/w500/<%=movie.poster_path%>"
                  alt="<%= movie.title %>"
                />
                <div class="overlay">
                  <div class="content">
                    <p><%=movie.overview %></p>
                  </div>
                </div>
              </figure>
            </a>
            <span class="movie-rating">⭐ <%= movie.vote_average %> </span>
            <h3 class="movie-title">
              <%=movie.title || movie.name || movie.original_name ||
              movie.original_title%>
            </h3>
          </div>
          <% }); %>
        </div>
      </section>
    </main>
  </body>
  <script></script>
</html>
